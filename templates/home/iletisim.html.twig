{% extends 'frontbase.html.twig' %}

{% block title %}İletisim {{ data[0].title }}{% endblock %}
{% block keywords %} {{ data[0].keywords }}{% endblock %}
{% block description %} {{ data[0].description }}{% endblock %}
{% block content %}

    <div class="container">
        <hr class="soften">
        <h1>Visit us</h1>
        <hr class="soften">
        <div class="row">
            <div class="span4">
                <p>
                    {{ data[0].aboutus|raw }}
                </p>
            </div>

            <div class="span4">
                <h4>Bize Ulaşabilirsiniz !</h4>
                {{ include('messages.html.twig') }}
                <form class="form-horizontal"name="messages"action="" method="post">
                    <fieldset>

                        <div class="control-group">
                            <input type="text" name="messages[name]" placeholder="name" class="input-xlarge">
                        </div>

                        <div class="control-group">
                            <input type="email" name="messages[email]" placeholder="email" class="input-xlarge">
                        </div>

                        <div class="control-group">
                            <input type="text" name="messages[subject]" placeholder="subject" class="input-xlarge">
                        </div>

                        <div class="control-group">
                            <textarea rows="3"name="messages[message]" id="textarea" class="input-xlarge"></textarea>
                        </div>
                        <input type="hidden"name="token"value="{{ csrf_token('form-message') }}"/>

                        <input class="btn btn-large" type="submit"value="MESAJI GONDER"></input>

                    </fieldset>
                </form>
            </div>
        </div>
    </div>
{% endblock %}