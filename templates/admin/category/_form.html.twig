<form class="form-horizontal form-material"method="post">
    <div class="white-box">
        <div class="form-group">
            <label class="col-md-12">Ust Kategori</label>
            <div class="col-md-12">
                <select name="category[parentid]" >

                    {% if category.parentid!=0 %}
                        <option value="{{ category.parentid }}">{{ catname.title }}</option>
                    {% else %}
                        <option value="0">Ana Kategori</option>
                    {% endif %}

                    <option value="0">Ana Kategori</option>
                    {% for cat in catlist %}
                        <option value="{{ cat.id }}">{{ cat.title  }}</option>
                    {% endfor %}

                </select>
            </div></div>

            <div class="form-group">
                <label   class="col-md-12">Title (Başlık)</label>
                <div class="col-md-12">
                    <input type="text" name="category[title]" value="{{ category.title }}" placeholder="title" class="form-control form-control-line"> </div>
            </div>

            <div class="form-group">
                <label class="col-md-12">Keywords (Anahtar Kelimeler)</label>
                <div class="col-md-12">
                    <input type="text" name="category[keywords]" value="{{ category.keywords }}" class="form-control form-control-line" placeholder="keywords"> </div>
            </div>

            <div class="form-group">
                <label class="col-md-12">Description (Kısa Açıklama)</label>
                <div class="col-md-12">
                    <input type="text" name="category[description]" value="{{ category.description }}" class="form-control form-control-line" placeholder="description"> </div>
            </div>

            <div class="form-group">
                <label class="col-md-12">Active / Inactive</label>
                <div class="col-md-12">
                    <select name="category[status]" >
                        <option>{{ category.status  }}</option>

                        <option>True</option>
                        <option selected>False</option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-12">
                    <button class="btn btn-success">Kaydet</button>
                </div>
            </div>

    </div>
</form>
