<form class="form-horizontal" method="post">
    <div class="white-box">
        <div class="form-group">
            <label class="col-md-12">Kategorisi</label>
            <div class="col-md-12">
                <select name="product[category_id]" >
                    {% if (catname) %}
                    <option value="{{ product.categoryid }}">{{ catname[0].title }}</option>
                    {% endif %}

                    {% for cat in catlist %}
                        <option value="{{ cat.id }}">{{ cat.title  }}</option>
                    {% endfor %}

                </select>
            </div>
        </div>

        <div class="form-group">
            <label   class="col-md-12">Title (Başlık)</label>
            <div class="col-md-12">
                <input type="text" name="product[title]" value="{{ product.title }}" placeholder="title" class="form-control form-control-line"> </div>
        </div>

        <div class="form-group">
            <label class="col-md-12">Keywords (Anahtar Kelimeler)</label>
            <div class="col-md-12">
                <input type="text" name="product[keywords]" value="{{ product.keywords }}" class="form-control form-control-line" placeholder="keywords"> </div>
        </div>

        <div class="form-group">
            <label class="col-md-12">Description (Kısa Açıklama)</label>
            <div class="col-md-12">
                <input type="text" name="product[description]" value="{{ product.description }}" class="form-control form-control-line" placeholder="description"> </div>
        </div>


        <div class="form-group">
            <label class="col-md-12">Alış Fiyatı</label>
            <div class="col-md-12">
                <input type="text" name="product[pprice]" value="{{ product.pprice }}" class="form-control form-control-line" placeholder="description"> </div>
        </div>

        <div class="form-group">
            <label class="col-md-12">Satış Fiyatı</label>
            <div class="col-md-12">
                <input type="text" name="product[sprice]" value="{{ product.sprice }}" class="form-control form-control-line" placeholder="description"> </div>
        </div>

        <div class="form-group">
            <label class="col-md-12">Miktar</label>
            <div class="col-md-12">
                <input type="text" name="product[amount]" value="{{ product.amount }}" class="form-control form-control-line" placeholder="description"> </div>
        </div>

        <div class="form-group">
            <label class="col-md-12">Detay</label>
            <div class="col-md-12">
                <textarea id="detail"name="product[detail]" rows="10"cols="100">{{ product.detail }}</textarea>
            </div>
        </div>

            <div class="form-group">
                <label class="col-md-12">Active / Inactive</label>
                <div class="col-md-12">
                    <select name="product[status]" >
                        <option>{{ product.status  }}</option>

                        <option>True</option>
                        <option selected>False</option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-12">
                    <button class="btn btn-success">Kaydet</button>
                </div>
            </div>

        </div>
</form>
<script>
    ClassicEditor
        .create( document.querySelector( '#detail' ) )
        .catch( error => {
            console.error( error );
        } );
</script>